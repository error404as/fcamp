<% include partials/head %> 

	<div class="main">
		<div class="content">
			<div class="meta">
				<div class="author">Author: <%= post.author %></div>
				<div class="date">Published: <%= moment(post.created).format('YYYY-MM-DD HH:mm') %></div>
			</div>
			<h1><%= post.headline %></h1>
			<% if(editor === post.author){ %>
				<p>
					<a href="?action=delete">Delete this post</a>
				</p>
			<% } %>
			<% if(post.image){ %>
				<img src="<%= post.image.replace(/\\/g,'/') %>" alt="<%= post.headline %>">
				<br>
				<br>
			<% } %>
			<%= post.body %>
		</div>
		<aside class="sidebar">
			<div class="tags">
				<h3>Tags</h3>
				<div class="js-tags"></div>
			</div>
		</aside>
	</div>

<% include partials/foot %> 
